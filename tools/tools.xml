<?xml version="1.0" encoding="UTF-8"?>
<project name="tools" default="all">
  
  
  <property file="tools.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  
  <!-- Project Libraries -->
  <path id="library.hamcrest-core-1.3.classpath">
    <pathelement location="${basedir}/lib/hamcrest-core-1.3.jar"/>
  </path>
  
  <path id="library.junit-4.11.classpath">
    <pathelement location="${basedir}/lib/junit-4.11.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  
  <!-- Modules -->
  
  
  <!-- Module copper-composer -->
  
  <dirname property="module.copper-composer.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.copper-composer" value="${compiler.args}"/>
  
  <property name="copper-composer.output.dir" value="${module.copper-composer.basedir}/copper-composer/bin"/>
  <property name="copper-composer.testoutput.dir" value="${module.copper-composer.basedir}/copper-composer/bin"/>
  
  <path id="copper-composer.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  
  <patternset id="excluded.from.module.copper-composer">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.copper-composer">
    <patternset refid="excluded.from.module.copper-composer"/>
  </patternset>
  
  <path id="copper-composer.module.sourcepath">
    <dirset dir="${module.copper-composer.basedir}/copper-composer">
      <include name="src"/>
    </dirset>
  </path>
  
  <target name="clean.module.copper-composer" description="cleanup module">
    <delete dir="${copper-composer.output.dir}"/>
    <delete dir="${copper-composer.testoutput.dir}"/>
  </target>
  
  
  <!-- Module wyvern-tools -->
  
  <dirname property="module.wyvern-tools.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.wyvern-tools" value="${compiler.args}"/>
  
  <property name="wyvern-tools.output.dir" value="${module.wyvern-tools.basedir}/bin"/>
  <property name="wyvern-tools.testoutput.dir" value="${module.wyvern-tools.basedir}/bin"/>
  
  <path id="wyvern-tools.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="wyvern-tools.module.production.classpath">
    <pathelement location="${basedir}/lib/ant.jar"/>
    <pathelement location="${basedir}/lib/asm-debug-all-5.0.1.jar"/>
    <pathelement location="${basedir}/lib/javatuples-1.2.jar"/>
    <pathelement location="${basedir}/lib/CopperCompiler.jar"/>
    <pathelement location="${basedir}/lib/CopperRuntime.jar"/>
    <path refid="library.hamcrest-core-1.3.classpath"/>
    <path refid="library.junit-4.11.classpath"/>
  </path>
  
  <path id="wyvern-tools.runtime.production.module.classpath">
    <pathelement location="${wyvern-tools.output.dir}"/>
    <pathelement location="${basedir}/lib/ant.jar"/>
    <pathelement location="${basedir}/lib/asm-debug-all-5.0.1.jar"/>
    <pathelement location="${basedir}/lib/javatuples-1.2.jar"/>
    <pathelement location="${basedir}/lib/CopperCompiler.jar"/>
    <pathelement location="${basedir}/lib/CopperRuntime.jar"/>
    <path refid="library.hamcrest-core-1.3.classpath"/>
    <path refid="library.junit-4.11.classpath"/>
  </path>
  
  <path id="wyvern-tools.module.classpath">
    <pathelement location="${wyvern-tools.output.dir}"/>
    <pathelement location="${basedir}/lib/ant.jar"/>
    <pathelement location="${basedir}/lib/asm-debug-all-5.0.1.jar"/>
    <pathelement location="${basedir}/lib/javatuples-1.2.jar"/>
    <pathelement location="${basedir}/lib/CopperCompiler.jar"/>
    <pathelement location="${basedir}/lib/CopperRuntime.jar"/>
    <path refid="library.hamcrest-core-1.3.classpath"/>
    <path refid="library.junit-4.11.classpath"/>
  </path>
  
  <path id="wyvern-tools.runtime.module.classpath">
    <pathelement location="${wyvern-tools.output.dir}"/>
    <pathelement location="${basedir}/lib/ant.jar"/>
    <pathelement location="${basedir}/lib/asm-debug-all-5.0.1.jar"/>
    <pathelement location="${basedir}/lib/javatuples-1.2.jar"/>
    <pathelement location="${basedir}/lib/CopperCompiler.jar"/>
    <pathelement location="${basedir}/lib/CopperRuntime.jar"/>
    <path refid="library.hamcrest-core-1.3.classpath"/>
    <path refid="library.junit-4.11.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.wyvern-tools">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.wyvern-tools">
    <patternset refid="excluded.from.module.wyvern-tools"/>
  </patternset>
  
  <path id="wyvern-tools.module.sourcepath">
    <dirset dir="${module.wyvern-tools.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.wyvern-tools" depends="compile.module.wyvern-tools.production,compile.module.wyvern-tools.tests" description="Compile module wyvern-tools"/>
  
  <target name="compile.module.wyvern-tools.production" description="Compile module wyvern-tools; production classes">
    <mkdir dir="${wyvern-tools.output.dir}"/>
    <javac destdir="${wyvern-tools.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.wyvern-tools}"/>
      <bootclasspath refid="wyvern-tools.module.bootclasspath"/>
      <classpath refid="wyvern-tools.module.production.classpath"/>
      <src refid="wyvern-tools.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.wyvern-tools"/>
    </javac>
    
    <copy todir="${wyvern-tools.output.dir}">
      <fileset dir="${module.wyvern-tools.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.wyvern-tools.tests" depends="compile.module.wyvern-tools.production" description="compile module wyvern-tools; test classes" unless="skip.tests"/>
  
  <target name="clean.module.wyvern-tools" description="cleanup module">
    <delete dir="${wyvern-tools.output.dir}"/>
    <delete dir="${wyvern-tools.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.copper-composer, clean.module.wyvern-tools" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.wyvern-tools" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>